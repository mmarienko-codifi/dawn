{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <ajax-product-recommendations class="product-recommendations page-width section-{{ section.id }}-padding">
    <div class="product-recommendations__heading">
      <h2 class="product-recommendations__title {{ section.settings.heading_size }}">{{ 'templates.ajax_api.product_recommendations.title' | t }}</h2>
      <div class="product-recommendations__row">
        <div class="field">
          <input type="tel" id="ProductRecommendationsInput-{{ section.id }}" class="field__input" placeholder="Product ID">
          <label class="field__label" for="ProductRecommendationsInput-{{ section.id }}">{{ 'templates.ajax_api.product_recommendations.input' | t }}</label>
        </div>
        <button type="submit" class="button" id="ProductRecommendationsButton-{{ section.id }}">{{ 'templates.ajax_api.product_recommendations.submit' | t }}</button>
      </div>
    </div> 
    <div id="product-recommendations">
      {% if recommendations.performed and recommendations.products_count > 0 %}
        <ul class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" role="list">
          {% for recommendation in recommendations.products %}
            <li class="grid__item">
              {% render 'card-product',
                card_product: recommendation,
                media_aspect_ratio: section.settings.image_ratio,
                show_secondary_image: section.settings.show_secondary_image,
                show_vendor: section.settings.show_vendor,
                show_rating: section.settings.show_rating
              %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  </ajax-product-recommendations>
</div>

{% javascript %}
  class AjaxProductRecommendations extends HTMLElement {
    constructor() {
      super();

      this.input = this.querySelector('[id^="ProductRecommendationsInput-"]');
      this.button = this.querySelector('[id^="ProductRecommendationsButton-"]');

      this.button.addEventListener('click', this.inject.bind(this));
    }

    inject() {
      const selector = '#product-recommendations';
      const productRecommendationsSection = document.querySelector(selector);
      fetch(window.Shopify.routes.root + `recommendations/products?product_id=${this.input.value}&limit=4&section_id=ajax-product-recommendations`)
      .then(response => {
        if (!response.ok) {
          this.querySelector(selector).innerHTML = 'Error: ' + response.statusText;
        }
        return response.text()
      })
      .then((text) => {
        this.classList.add('product-recommendations--loaded');
        const html = document.createElement('div');
        html.innerHTML = text;
        const recommendations = html.querySelector(selector);

        if (recommendations && recommendations.innerHTML.trim().length) {
          this.querySelector(selector).innerHTML = recommendations.innerHTML;
        }
      })
      .catch(e => {
        console.error(e);
      });
    }
  }

  customElements.define('ajax-product-recommendations', AjaxProductRecommendations);
{% endjavascript %}

