{{ 'section-ajax-product-api.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <ajax-product-api class="product-api page-width section-{{ section.id }}-padding">
    <h2 class="product-api__heading {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
    <div class="product-api__row">
      <div class="field">
        <input type="tel" id="ProductApiInput-{{ section.id }}" class="field__input" placeholder="{{ 'templates.ajax.form.handler' | t }}">
        <label class="field__label" for="ProductApiInput-{{ section.id }}">{{ 'templates.ajax.form.handler' | t }}</label>
      </div>
      <button type="submit" class="button" id="ProductApiButton-{{ section.id }}">{{ 'templates.ajax.form.submit' | t }}</button>
    </div>
    <div id="product-api">
      <ul class="grid product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" role="list">
        <li class="grid__item">
          {% render 'card-product',
            card_product: product,
            media_aspect_ratio: section.settings.image_ratio,
            show_secondary_image: section.settings.show_secondary_image,
            show_vendor: section.settings.show_vendor,
            show_rating: section.settings.show_rating
          %}
        </li>
      </ul>
    </div>
  </ajax-product-api>
</div>

{% javascript %}
  class AjaxProductApi extends HTMLElement {
    constructor() {
      super();

      this.input = this.querySelector('[id^="ProductApiInput-"]');
      this.button = this.querySelector('[id^="ProductApiButton-"]');

      this.button.addEventListener('click', this.inject.bind(this));
    }

    inject() {
      const selector = '#product-api';
      fetch(window.Shopify.routes.root + `products/${this.input.value}?section_id=ajax-product-api`)
      .then(response => {
        if (!response.ok) {
          this.querySelector(selector).innerHTML = 'Error: ' + response.statusText;
        }
        return response.text()
      })
      .then((text) => {
        const html = document.createElement('div');
        html.innerHTML = text;
        const product = html.querySelector(selector);

        if (product && product.innerHTML.trim().length) {
          this.querySelector(selector).innerHTML = product.innerHTML;
        }
      })
      .catch(e => {
        console.error(e);
      });
    }
  }

  customElements.define('ajax-product-api', AjaxProductApi);
{% endjavascript %}

