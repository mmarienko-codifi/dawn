{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <ajax-cart-add-item class="cart-add-item page-width section-{{ section.id }}-padding">
    <h2 class="cart-add-item__heading {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h2>
    <div class="field">
      <input type="tel" id="CartAddItemInput-{{ section.id }}" class="field__input" placeholder="{{ 'templates.ajax.form.id' | t }}">
      <label class="field__label" for="CartAddItemInput-{{ section.id }}">{{ 'templates.ajax.form.id' | t }}</label>
      <button type="submit" class="button field__button cart-add-item__button" id="CartAddItemButton-{{ section.id }}">
        <span>
          {{ 'templates.ajax.form.submit' | t }}
        </span>
        <div class="loading-overlay__spinner hidden">
          <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
            <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
          </svg>
        </div>
      </button>
    </div>
    <div class="cart-add-item__error-message-wrapper" role="alert" hidden>
      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-error" viewBox="0 0 13 13">
        <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"></circle>
        <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"></circle>
        <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"></path>
        <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
      </path></svg>
      <span class="cart-add-item__error-message"></span>
    </div>
  </ajax-cart-add-item>
</div>

{% javascript %}
  class AjaxCartAddItem extends HTMLElement {
    constructor() {
      super();

      this.input = this.querySelector('[id^="CartAddItemInput-"]');
      this.button = this.querySelector('[id^="CartAddItemButton-"]');

      this.button.addEventListener('click', this.inject.bind(this));
    }

    inject(evt) {
      evt.preventDefault();
      this.enableLoading();

      let formData = {
        'items': [{
          'id': `${this.input.value}`,
          'quantity': 1
        }],
      };
      fetch(window.Shopify.routes.root + 'cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(formData)
      })
      .then(response => {
        this.handleErrorMessage(response);
        this.disableLoading();
        if (!response.status) {
          this.setSuccess();
        }
        return response.json()
      })
      .finally(() => {
        this.updateCart();
      })
      .catch((error) => {
        console.error('Error:', error);
      });
    }

    enableLoading() {
      this.button.classList.add('loading');
      this.button.querySelector('.loading-overlay__spinner').classList.remove('hidden');
      this.button.setAttribute('aria-disabled', true);
    }
  
    disableLoading() {
      this.button.classList.remove('loading');
      this.button.querySelector('.loading-overlay__spinner').classList.add('hidden');
      this.button.setAttribute('aria-disabled', false);
    }

    setSuccess() {
      const text = this.button.innerText;
      this.button.querySelector('span').innerText = "Success";
      this.button.classList.add('success');

      setTimeout(() => {
        this.button.querySelector('span').innerText = text;
        this.button.classList.remove('success');
      }, 3000)
    }

    handleErrorMessage(response) {
      this.errorMessageWrapper = this.errorMessageWrapper || this.querySelector('.cart-add-item__error-message-wrapper');
      if (!this.errorMessageWrapper) return;
      this.errorMessage = this.errorMessage || this.errorMessageWrapper.querySelector('.cart-add-item__error-message');

      this.errorMessageWrapper.toggleAttribute('hidden', response.ok);

      if (!response.ok) {
        this.errorMessage.textContent = response.statusText;
      }
    }

    updateCart() {
      fetch(window.Shopify.routes.root + `?section_id=ajax-cart-items`)
      .then(response => {
        return response.text()
      })
      .then((text) => {
        const selector = 'cart-items';
        const html = document.createElement('div');
        html.innerHTML = text;
        const recommendations = html.querySelector(selector);
        document.querySelector(selector).innerHTML = recommendations.innerHTML;
      })
      .catch(e => {
        console.error(e);
      });
    }
  }

  customElements.define('ajax-cart-add-item', AjaxCartAddItem);
{% endjavascript %}

